{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-param-reassign": ["error", { "props": false }],
    "import/no-dynamic-require": "off",
    "global-require": "off",
    "import/named": "off"
  },
  "plugins": ["prettier"]
}
